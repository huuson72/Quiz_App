@model List<QuizListItemViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center my-5">
    <h1 class="display-4">Welcome to Quiz App</h1>
    <p class="lead">Test your knowledge with our quizzes!</p>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var quiz in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@quiz.Title</h5>
                        <p class="card-text">@quiz.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">@quiz.QuestionCount questions</small>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="d-grid">
                            <a asp-controller="QuizUI" asp-action="Details" asp-route-id="@quiz.Id" class="btn btn-primary">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                No quizzes available at the moment. Please check back later.
            </div>
        </div>
    }
</div> 