@model StartQuizViewModel

@{
    ViewData["Title"] = "Start Quiz";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Start Quiz</h4>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="bi bi-play-circle-fill text-success" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">Ready to begin!</h5>
                </div>
                
                <form asp-action="Start" method="post">
                    <input type="hidden" asp-for="QuizId" />
                    <input type="hidden" asp-for="UserId" />
                    
                    <div class="alert alert-info">
                        <p class="mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            Click the button below to start the quiz. Good luck!
                        </p>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-play-fill me-2"></i>Begin Quiz
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 